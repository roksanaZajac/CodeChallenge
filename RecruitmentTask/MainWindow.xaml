<Window x:Class="RecruitmentTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecruitmentTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="850">

    <Grid Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Button x:Name="ScaleUp" Content="Zoom in" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ScaleUp_Click" Grid.Column="1" Width="65"/>
        <Button x:Name="ScaleDown" Content="Zoom out" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ScaleDown_Click" Grid.Column="1" Margin="0,25,0,0" Width="65"/>
        <Button x:Name="NextShape" Content="Next Shape" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Margin="0,50,0,0" Width="64" Click="NextShape_Click"/>
    </Grid>
</Window>
